{
    "version": "2.0.0",
    "tasks": [
        //C++ 컴파일
        {
            "type": "shell",
            "label": "vk",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceRoot}/src/vkcpp/window/*.cpp",
                "${workspaceRoot}/src/vkcpp/device/*.cpp",
                "${workspaceRoot}/src/vkcpp/render/swapchain/*.cpp",
                "${workspaceRoot}/src/*.cpp",
                "${workspaceRoot}/src/class/*.cpp",
                "-o",
                "${workspaceRoot}/build_mac/main.out",
                "-IC:/Users/soongunno/VulkanSDK/1.2.182.0/macOS/include",
                "-LC:/Users/soongunno/VulkanSDK/1.2.182.0/macOS/lib",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-I${workspaceRoot}/src",
                "-I${workspaceRoot}/src/vkcpp",
                "-I${workspaceRoot}/external/stb",
                //   "--static",
                "-lglfw",
                "-lpthread",
                "-lvulkan",
                "-O2"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}